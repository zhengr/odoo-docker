<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_payslip" inherit_id="hr_payroll.report_payslip">
    <xpath expr="//table[@name='contract-infos']/tr[1]/td[1]" position="after">
        <td class="w-25"><strong>Contract Type </strong></td>
    </xpath>
    <xpath expr="//table[@name='contract-infos']/tr[2]/td[1]" position="after">
        <td><span t-field="o.employee_id.contract_id.contract_type"/></td>
    </xpath>
</template>
</odoo>
