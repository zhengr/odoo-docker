<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="approvals assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/approvals/static/src/js/activity.js"/>
            <script type="text/javascript" src="/approvals/static/src/bugfix/bugfix.js"/>
            <script type="text/javascript" src="/approvals/static/src/components/activity/activity.js"/>
            <script type="text/javascript" src="/approvals/static/src/components/approval/approval.js"/>
            <script type="text/javascript" src="/approvals/static/src/models/activity/activity.js"/>
            <script type="text/javascript" src="/approvals/static/src/models/approval/approval.js"/>
            <script type="text/javascript" src="/approvals/static/src/widgets/form_renderer/form_renderer.js"/>

            <link rel="stylesheet" type="text/scss" href="/approvals/static/src/bugfix/bugfix.scss"/>
            <link rel="stylesheet" type="text/scss" href="/approvals/static/src/components/approval/approval.scss"/>
        </xpath>
    </template>

    <template id="assets_tests" name="Approvals Assets Tests" inherit_id="web.assets_tests">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/approvals/static/tests/tours/approvals.js"/>
        </xpath>
    </template>

    <template id="tests_assets" name="Approvals Tests Assets" inherit_id="web.tests_assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/approvals/static/tests/helpers/mock_server.js"/>
        </xpath>
    </template>

    <template id="qunit_suite" name="approvals_tests" inherit_id="web.qunit_suite_tests">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/approvals/static/src/bugfix/bugfix_tests.js"/>
            <script type="text/javascript" src="/approvals/static/src/components/activity/activity_tests.js"/>
        </xpath>
    </template>

</odoo>
