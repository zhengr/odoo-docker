            <field name="condition_select">python</field>
            <field name="condition_python">result = bool(contract.internet)</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
if not categories.BASIC:
    result = 0
else:
    result = 5.0
            </field>
